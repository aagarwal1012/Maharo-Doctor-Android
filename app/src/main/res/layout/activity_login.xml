<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/log_in_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ashutoshchaubey.maharodoctor.LoginActivity"
    android:fitsSystemWindows="true"
    android:background="@drawable/sign_in_bg1"
    >

    <TextView
        android:layout_marginTop="12dp"
        android:layout_below="@id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="12dp"
        android:text="@string/new_here"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/email_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_mail"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="E-mail Address"
                android:textColorHint="@android:color/black"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_password"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="\u2022\u2022\u2022\u2022\u2022\u2022\u2022\u2022"
                android:textColorHint="@android:color/black"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/button_sign_in"
        android:layout_below="@id/email_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@drawable/orange_button_bg"/>

</RelativeLayout>
