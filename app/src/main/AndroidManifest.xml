<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ashutoshchaubey.maharodoctor">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/SigninTheme" />
        <activity android:name=".activities.SignUpActivity" />
        <activity
            android:name=".activities.MakeAppointmentActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".activities.CurrentStatusActivity" />
        <activity android:name=".activities.PrescriptionsActivity" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.OTPActivity" />
        <activity android:name=".activities.ProfileActivity"></activity>
    </application>

</manifest>